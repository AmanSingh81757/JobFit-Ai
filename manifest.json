{
  "manifest_version": 3,
  "name": "JobFit AI",
  "version": "1.0",
  "description": "Analyzes your resume against a job description.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "assets/jobfit.png",
    "48": "assets/jobfit.png",
    "64": "assets/jobfit.png",
    "96": "assets/jobfit.png",
    "128": "assets/jobfit.png",
    "256": "assets/jobfit.png",
    "512": "assets/jobfit.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js",
        "floatingButton.js"
      ],
      "run_at": "document_end"
    }
  ]
}
